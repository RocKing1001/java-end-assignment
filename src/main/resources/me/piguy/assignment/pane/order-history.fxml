<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.piguy.assignment.pane.OrderHistoryPane">
    <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <VBox fx:id="navMenu" spacing="8.0" style="-fx-background-color: #952323;">
            <Button onAction="#navDashboard" prefWidth="150.0" style="-fx-background-color: #a73121;" text="Dashboard"
                    textFill="WHITE">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
            <Button onAction="#navCreateOrder" prefWidth="150.0" style="-fx-background-color: #a73121;"
                    text="Create order" textFill="WHITE">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
            <Button onAction="#navProductInventory" prefWidth="150.0" style="-fx-background-color: #a73121;"
                    text="Product inventory" textFill="WHITE">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
            <Button onAction="#navOrderHistory" prefWidth="150.0" style="-fx-background-color: #a73121;"
                    text="Order history" textFill="WHITE">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="40.0"/>
            </padding>
        </VBox>
        <VBox spacing="4.0" HBox.hgrow="ALWAYS">
            <Label text="Product inventory">
                <font>
                    <Font size="22.0"/>
                </font>
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
            </Label>
            <TableView fx:id="ordersTable">
                <columns>
                    <TableColumn fx:id="dateCol" prefWidth="139.0" text="Date/Time">
                        <cellValueFactory>
                            <PropertyValueFactory property="date"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="customerNameCol" prefWidth="284.0" text="Name">
                        <cellValueFactory>
                            <PropertyValueFactory property="name"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="totalPriceCol" prefWidth="171.0" text="Total price">
                        <cellValueFactory>
                            <PropertyValueFactory property="total"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
            <Label layoutX="20.0" layoutY="30.0" text="Ordered Products">
                <font>
                    <Font size="22.0"/>
                </font>
            </Label>
            <TableView fx:id="orderItemsTable" layoutX="20.0" layoutY="66.0">
                <columns>
                    <TableColumn fx:id="quantityCol" prefWidth="82.0" text="Quantity">
                        <cellValueFactory>
                            <PropertyValueFactory property="quantity"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="nameCol" prefWidth="162.0" text="Name">
                        <cellValueFactory>
                            <PropertyValueFactory property="name"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="categoryCol" prefWidth="99.0" text="Category">
                        <cellValueFactory>
                            <PropertyValueFactory property="category"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="priceCol" prefWidth="101.0" text="Price">
                        <cellValueFactory>
                            <PropertyValueFactory property="price"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="descCol" prefWidth="244.0" text="Description">
                        <cellValueFactory>
                            <PropertyValueFactory property="description"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="20.0"/>
            </padding>
        </VBox>
    </HBox>
</AnchorPane>
