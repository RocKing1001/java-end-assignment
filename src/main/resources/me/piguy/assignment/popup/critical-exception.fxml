<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="250.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
   <VBox>
      <children>
         <HBox spacing="28.0">
            <children>
                <VBox spacing="16.0">
                    <Label fx:id="exceptionTitle" text="Critical exception">
                     <font>
                        <Font name="System Bold" size="28.0" />
                     </font>
                  </Label>
                    <Label fx:id="exceptionContent" text="Critical exception occured, app cannot proceed" />
                </VBox>
               <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../assets/images/error.png" />
                  </image>
               </ImageView>
            </children>
            <padding>
               <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
            </padding>
         </HBox>
         <Button mnemonicParsing="false" text="Ok, exit the application" VBox.vgrow="ALWAYS" onAction="#close">
            <VBox.margin>
               <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
            </VBox.margin>
         </Button>
      </children>
   </VBox>
</AnchorPane>
